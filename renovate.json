{
  "rangeStrategy": "pin",
  "extends": ["config:recommended", "schedule:weekdays"],
  "timezone": "CET",
  "nvm": {
    "enabled": false
  },
  "major": {
    "dependencyDashboardApproval": true
  },
  "addLabels": ["renovate"],
  "commitBody": " #patch",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
